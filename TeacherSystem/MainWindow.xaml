        <Button x:Name="BtnMainEdit" Background="#FFE2EBFB" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="132" Height="44" FontSize="18" Click="BtnMainEdit_Click" Canvas.Left="159" Canvas.Top="582">
